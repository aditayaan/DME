		</dependency>
		<dependency>
			<groupId>com.att.aft</groupId>
			<artifactId>dme2-jaxws-client</artifactId>
			<version>3.1.200</version>
			<exclusions>
				<exclusion>
					<groupId>com.att.aft</groupId>
					<artifactId>dme2-api</artifactId>
				</exclusion>
				<exclusion>
					<artifactId>junit</artifactId>
					<groupId>junit</groupId>
				</exclusion>
			</exclusions>
